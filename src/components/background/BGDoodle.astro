<script 
    src="https://cdn.jsdelivr.net/npm/css-doodle@0.39.1/css-doodle.min.js">
</script>

<css-doodle id="bg-doodle" click-to-update>
    {`
        @grid: 40 / 100%;
        @random {
            border-left: 1px solid #5d81bc;
        }
        @random {
            border-top: 1px solid #5d81bc;
        }
        @random(.25) {
            background: linear-gradient(@p(#fff, tan, #5d81bc), @lp
        )
        50% / @r(60%) @lr
        no-repeat;
        }
        @random {
            filter: drop-shadow(0 0 10px #fff);
        }
    `}
</css-doodle>

<style>
    #bg-doodle {
        width: 100%;
        height: 100%;
        background: #0F2027;  /* fallback for old browsers */
        background: -webkit-linear-gradient(to right, #2C5364, #203A43, #0F2027);  /* Chrome 10-25, Safari 5.1-6 */
        background: linear-gradient(to right, #2C5364, #203A43, #0F2027); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        position: absolute;
    }
</style>